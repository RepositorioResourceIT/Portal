@model IEnumerable<Itau.PO.UI.MVC.ViewModel.UsuarioViewModel>

@{
    ViewBag.Title = "Usuários";
}

@section css{
    <link href="~/Content/assets/plugins/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/assets/plugins/sweetalert/sweetalert.css" rel="stylesheet" type="text/css">

    <style>
        .container-fluid .row .col-12 .buttons {
            max-height: 100%;
            max-width: 100%;
            display: flex;
            padding-bottom: 10px;
            float: right;
        }
    </style>
}

<div class="container-fluid">
    @*<div class="row">
            <div class="col-12">
                <div class="buttons">
                    <button id="sample_editable_1_new" class="btn waves-effect waves-light btn-info">
                        Novo
                        <i class="fa fa-plus"></i>
                    </button>
                </div>
            </div>
        </div>*@


    <div class="row">
        <div class="col-lg-12 col-xlg-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsiv">
                        <table class="table table-striped table-bordered table-hover tabela" id="tbUsuario">
                            <thead>
                                <tr>
                                    <th>
                                        Nome completo
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Racf)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Funcional)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th style="text-align: center">
                                        Ação
                                    </th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr id="@item.IdUsuario">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Racf)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Funcional)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td style="text-align:center">
                                            @Html.ActionLink(" ", "EditUsuario", new { id = item.IdUsuario }, new { @class = "fa fa-pencil text-inverse m-r-10" })
                                           
                                          
                                            <a href="#"><i class="fa fa-close text-danger deleteAlert"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts{
    <script type="text/javascript" src="~/Scripts/Portal/jsUsuario.js"></script>

    <script src="~/Content/assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <!-- start - This is for export functionality only -->
    <script src="~/Content/js/dataTables.buttons.min.js"></script>
    <script src="~/Content/js/buttons.flash.min.js"></script>
    <script src="~/Content/js/jszip.min.js"></script>
    <script src="~/Content/js/pdfmake.min.js"></script>
    <script src="~/Content/js/vfs_fonts.js"></script>
    <script src="~/Content/js/buttons.html5.min.js"></script>
    <script src="~/Content/js/buttons.print.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <!-- end - This is for export functionality only -->
}
