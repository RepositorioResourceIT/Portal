@model Itau.PO.UI.MVC.ViewModel.ProjetoViewModel

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="text-center">
                    <h4>Custo do Projeto:</h4>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CustoHoras, htmlAttributes: new { @class = "control-label" })
                    <b>@Model.CustoHoras</b>
                    <br />
                    @Html.LabelFor(model => model.CustoPorHora, htmlAttributes: new { @class = "control-label" })
                    <b>R$ @Model.CustoPorHora</b>
                    <br />
                    @Html.LabelFor(model => model.CustoTotal, htmlAttributes: new { @class = "control-label" })
                    <b>R$ @Model.CustoTotal</b>
                </div>
            </div>
        </div>
    </div>
</div>